{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Yarp.ReverseProxy": "Information"
    }
  },
  "AllowedHosts": "*",

  "ReverseProxy": {
    "Routes": {
      "premierleague": {
        "ClusterId": "backend",
        "Match": {
          "Path": "/premierleague/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/premierleague" },
          { "PathPrefix": "/premierleague" }
        ]
      }
    },
    "Clusters": {
      "backend": {
        "Destinations": {
          "backend1": { "Address": "http://192.168.223.86:8080" },
          "backend2": { "Address": "http://192.168.223.29:8080" },
          "backend3": { "Address": "http://192.168.223.105:8080" },
          "backend4": { "Address": "http://192.168.223.72:8080" }
        },

        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Path": "/premierleague/actuator/health"
          },
          "Passive": {
            "Enabled": false        
          }
        }
       }
     }
   }
}
